<lxs>
    <scene root="root" axis_length="10"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="defaultLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

  <textures>

    <texture id="defaultTexture" file="images/default.jpg" />

    <texture id="metallicTexture" file="images/metallic.jpg" />

    <texture id="houseWallTexture" file="images/housewall.jpg" />

    <texture id="rooftopTexture" file="images/rooftop.jpg" />

    <texture id="windowTexture" file="images/window.jpg" />

    <texture id="doorTexture" file="images/door.jpg" />

    <texture id="cannonTexture" file="images/cannon.jpg" />

    <texture id="cannonWheelsTexture" file="images/cannonWheels.jpg" />

  </textures>

   
  <materials>

    <material id="defaultMaterial" shininess="1" >
        <emission r="0.0" g="0.0" b="0.0" a="1" />
        <ambient r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.0" g="0.0" b="0.0" a="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
    </material>

    <material id="woodMaterial" shininess="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0" g="0" b="0" a="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
    </material>

    <material id="floorMaterial" shininess="1" />
        <emission r="0.0" g="0.0" b="0.0" a="0" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0" g="0" b="0" a="0" />
        <ambient r="1" g="1" b="1" a="1" />
    </material>

    <material id="metallicMaterial" shininess="6.735" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
        <specular r="0.508273" g="0.508273" b="0.508273" a="0.5" />
        <diffuse r="0.50754" g="0.50754" b="0.50754" a="1" />
        <ambient r="0.19225" g="0.19225" b="0.19225" a="1" />
    </material>

    <material id="blackMaterial" shininess="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
        <specular r="0" g="0" b="0" a="1" />
        <diffuse r="0" g="0" b="0" a="1" />
        <ambient r="0.05" g="0.05" b="0.05" a="1" />
    </material>
  </materials>

  <transformations>

    <!-->< UFO /!-->

    <transformation id="trf_UFO">
      <translate x="5" y="5" z="5" />
    </transformation>

    <transformation id="trf_outerUFO">
      <rotate axis="x" angle="-90" />
    </transformation>
    <!-->< House /!-->

    <transformation id="trf_house">
      <translate x="10" y="10" z="0" />
    </transformation>
    
    <transformation id="trf_wall">
      <rotate axis="x" angle="-90" />
    </transformation>
    
    <transformation id="trf_window2">
      <rotate axis="x" angle="-90" />
    </transformation>
    
    <transformation id="trf_window3">
      <rotate axis="x" angle="-90" />
    </transformation>

    <transformation id="trf_rooftops">
      <rotate axis="x" angle="-90" />
    </transformation>

    <transformation id="trf_rooftop2">
      <translate x="10" y="10" z="0" />
    </transformation>

    <transformation id="trf_rooftop3">
      <translate x="10" y="10" z="0" />
    </transformation>
    
    <transformation id="trf_rooftop4">
      <translate x="10" y="10" z="0" />
    </transformation>

    <!--> < Cannon Gun  /!-->
    <transformation id="trf_cannon">
      <translate x="20" y="10" z="0" />
    </transformation>
    
    <transformation id="trf_cannonWheel">
      <translate x="20" y="10" z="0" />
    </transformation>
    
    <transformation id="trf_cannonWheelLeft">
      <translate x="20" y="10" z="0" />
    </transformation>
   
    <transformation id="trf_cannonGun">
      <translate x="20" y="10" z="0" />
    </transformation>
    

  </transformations>

  <primitives>


  <!-- Floor Primitives -->
    <primitive id="prim_floor">
        <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
    </primitive>
    
    <!-- UFO Primitives -->
    <primitive id="prim_outerUFO">
        <torus inner="10" outer="3" slices="100" loops="100" />
    </primitive>

    <primitive id="prim_innerUFO">
        <sphere radius="0.5" slices="100" stacks="100" />
    </primitive>

    <!-- House Primitives -->
    <primitive id="prim_door">
        <rectangle x1="0" y1="0" x2="4" y2="4" />
    </primitive>

    <primitive id="prim_window">
        <rectangle x1="0" y1="0" x2="4" y2="4" />
    </primitive>

    <primitive id="prim_wall">
        <rectangle x1="0" y1="0" x2="4" y2="4" />
    </primitive>

    <primitive id="prim_rooftop">
        <triangle x1="0" y1="0" z1="0"
                  x2="0" y2="0" z2="0"
                  x3="0" y3="0" z3="0" />
    </primitive>

    <!-- Cannon Primitives -->
    <primitive id="prim_wheels">
        <cylinder base="2" top="0.5" height="0.5" slices="100" stacks="100" />
    </primitive>

    <primitive id="prim_cannon">
        <cylinder base="1" top="5" height="10" slices="100" stacks="100" />
    </primitive>

    </primitives>


  <components>

  <!-- UFO components START -->

    <component id="innerUFO">

      <transformation>

      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="none" length_s="1" length_t="1" />

      <children>
        <primitiveref id="prim_innerUFO" />
      </children>
    </component>

    <component id="outerUFO">

      <transformation>

       <transformationref id="trf_outerUFO" />

      </transformation>

      <materials>
        <material id="none" />
      </materials>

      <texture id="inherit" length_s="1" length_t="1" />

      <children>
        <primitiveref id="prim_outerUFO" />
      </children>
    </component>

    <component id="UFO">

      <transformation>

        <transformationref id="trf_UFO" />

      </transformation>

      <materials>
        <material id="metalMaterial" />
      </materials>

      <texture id="metallicTexture" length_s="1" length_t="1" />

      <children>
        <componentref id="innerUFO" />
        <componentref id="outerUFO" />
      </children>
    </component>

  <!-- UFO components END -->

  <!-- House components START -->

    <component id="wall">

      <transformation>
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="houseWallTexture" length_s="1" length_t="1" />

      <children>
        <primitiveref id="prim_wall" />
      </children>

    </component>

    <component id="rooftop1">

      <transformation>
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="inherit" />

      <children>
        <primitiveref id="prim_rooftop" />
      </children>

    </component>

    <component id="rooftop2">

      <transformation>
        <transformationref="trf_rooftop2" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

        <texture id="inherit" />

      <children>
        <primitiveref id="prim_rooftop" />
      </children>

    </component>

    <component id="rooftop3">

      <transformation>
        <transformationref="trf_rooftop3" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

        <texture id="inherit" />

      <children>
        <primitiveref id="prim_rooftop" />
      </children>

    </component>

    <component id="rooftop4">


      <transformation>
        <transformationref="trf_rooftop4" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="inherit" />

      <children>
        <primitiveref id="prim_rooftop" />
      </children>

    </component>

    <component id="rooftops">

      <transformation>
        <transformationref="trf_rooftops" />
      </transformation>

      <materials>
        <material id="none" />
      </materials>

      <texture id="rooftopTexture" length_s="1" length_t="1" />

      <children>
        <componentref="rooftop1" />
        <componentref="rooftop2" />
        <componentref="rooftop3" />
        <componentref="rooftop4" />
      </children>

    </component>

    <component id="rooftop">

      <transformation>
      </transformation>

      <materials>
        <material id="none" />
      </materials>

      <texture id="inherit" />

      <children>
      </children>

    </component>

    <component id="door">

      <transformation>
        <transformationref="trf_door" />
      </transformation>

      <materials>
        <material id="none" />
      </materials>

      <texture id="doorTexture" length_s="1" length_t="1" />

      <children>
        <primitiveref="prim_door" />
      </children>

    </component>

    <component id="window2">

      <transformation>
          <transformationref="trf_window2" />
      </transformation>

      <materials>
            <material id="inherit" />
      </materials>

      <texture id="windowTexture" length_s="1" length_t="1" />

      <children>
        <primitiveref="prim_window" />
      </children>

    </component>

    <component id="window3">

      <transformation>
        <transformationref="trf_window3" />
      </transformation>

      <materials>
            <material id="inherit" />
      </materials>

      <texture id="windowTexture" length_s="1" length_t="1" />

      <children>
        <primitiveref="prim_window" />
      </children>


    <component id="section1">

      <transformation>
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="inherit" />

      <children>
        <componentref="door" />
        <componentref="wall" />
      </children>

    </component>

    <component id="section2">

      <transformation>
        <transformationref="trf_section2" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

        <texture id="inherit" />

      <children>
        <componentref="window" />
        <componentref="wall" />
      </children>

    </component>

    <component id="section3">

      <transformation>
        <transformationref="trf_section3" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

        <texture id="inherit" />

      <children>
        <componentref="window" />
        <componentref="wall" />
      </children>

    </component>

    <component id="section4">

      <transformation>
        <transformationref="trf_section4" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="inherit" />

      <children>
        <componentref="wall"/>
      </children>

    </component>

    <component id="sections">

      <transformation>
        <transformationref="trf_sections" />
      </transformation>

      <materials>
        <material id="woodMaterial" />
      </materials>

      <texture id="inherit" />

      <children>
        <componentref="section1" />
        <componentref="section2" />
        <componentref="section3" />
        <componentref="section4" />
      </children>

    </component>

    <component id="house">

      <transformation>
        <transformationref="trf_house" />
      </transformation>

      <materials>
        <material id="woodMaterial" />
      </materials>

      <texture id="houseWallTexture" length_s="1" length_t="1"/>

      <children>
        <componentref="sections"/>
        <componentref="rooftops"/>
      </children>

    </component>

    <!-- House components END -->

    <!-- Cannon components START -->

    <component id="CannonGun">

      <transformation>
        <transformationref="trf_cannonGun" />
      </transformation>

      <materials>
        <material id="metallicMaterial" />
      </materials>

      <texture id="cannonTexture" length_s="1" length_t="1"/>

      <children>
        <primitiveref="prim_cannon" />
      </children>

    </component>


    <component id="Wheel_right">

      <transformation>
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <children>
        <primitiveref="prim_wheels" />
      </children>

    </component>

    <component id="Wheel_left">

      <transformation>
        <transformationref="trf_cannonWheelLeft" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <children>
        <primitiveref="prim_wheels" />
      </children>

    </component>

    <component id="Wheels">

      <transformation>
        <transformationref="trf_cannonWheel" />
      </transformation>

      <materials>
        <material id="metallicMaterial" />
      </materials>

      <texture id="cannonWheelsTexture" length_s="1" length_t="1" />

      <children>
        <componentref="Wheel_left" />
        <componentref="Wheel_right" />
      </children>

    </component>

    <component id="Cannon">

      <transformation>
        <transformationref="trf_cannon" />
      </transformation>

      <materials>
        <material id="metallicMaterial" />
      </materials>

      <children>
        <componentref="Wheels" />
        <componentref="CannonGun" />
      </children>

    </component>



  <!-- Cannon components END -->


  <!-- Floor components START -->

    <component id="floor">

      <transformation>
        <translate x="7.5" y="0" z="7.5" />
        <rotate axis="x" angle="-90" />
        <scale x="15" y="15" z="0.2" />
      </transformation>

      <materials>
        <material id="floorMaterial" />
      </materials>

      <texture id="floorTexture" length_s="1" length_t="1" />

      <children>
        <primitiveref="prim_floor" />
      </children>

    </component>
  <!-- Floor components END -->

  <!-- Root components START -->

    <component id="root">

      <transformation>

      </transformation>

      <materials>
        <material id="defaultMaterial" />
      </materials>

      <texture id="defaultTexture" />

      <children>
        <componentref="UFO" />
        <componentref="house" />
        <componentref="cannon" />
        <componentref="floor" />
      </children>

    </component>

  <!-- Root components END -->

  </components>

</lxs>